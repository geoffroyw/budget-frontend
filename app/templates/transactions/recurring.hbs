<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Recurring Transactions</h3>
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border">
                            <thead class="no-border">
                            <tr>
                                <th>Frequency</th>
                                <th>Last execution date</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Mean of Payment</th>
                                <th>Bank Account</th>
                                <th>Categories</th>
                                <th>Is active</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody class="no-border-y">
                            {{#each model as |transaction|}}
                                <tr>
                                    <td>{{transaction.recurring_type}}</td>
                                    <td>{{format-date model.last_run_on 'DD/MM/YYYY'}}</td>
                                    <td>{{transaction.description}}</td>
                                    <td>{{format-amount transaction.amount_cents transaction.currency}}</td>
                                    <td>{{transaction.payment_mean.name}}</td>
                                    <td>{{transaction.bank_account.name}}</td>
                                    <td>{{category-names categories=transaction.categories}}</td>
                                    <td>{{input type='checkbox' checked=transaction.is_active}}</td>
                                    <td>&nbsp;</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-primary" {{action 'openFormModal'}}>
                            <i class="fa fa-calendar"></i> New recurring transaction
                        </button>

                    </div>


                </div>
            </div>
        </div>
    </div>


    {{#if showForm}}
        {{recurring-transaction-form
        bankAccounts=metaData.bankAccounts
        paymentMeans=metaData.paymentMeans
        categories=metaData.categories
        model=selectedTransaction
        removeModal='removeModal'
        createNewCategory='createNewCategory'}}
    {{/if}}

    {{outlet}}
</div>

