<div class="cl-mcont">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Filter Criteria</h3>
                </div>
                <div class="content">
                    <form {{action 'computeReport' on='submit'}} class="form-horizontal">
                        <div class="form-group {{if dateInvalidMessage 'has-error'  ''}}">
                            <label for="from" class="col-sm-1 control-label">Date From</label>
                            <div class="col-sm-2">
                              {{bootstrap-datepicker value=from class='form-control'}}
                            </div>
                            <label for="to" class="col-sm-1 control-label">Date To</label>
                            <div class="col-sm-2">
                              {{bootstrap-datepicker value=to class='form-control'}}
                            </div>
                            <div class="col-sm-2 col-sm-offset-1">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                            <div class="col-sm-4 col-sm-offset-1">
                              {{dateInvalidMessage}}
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>



      <div class="row">
          <div class="col-sm-12 col-md-10">
              <div class="block-flat">
                  <div class="header">
                      <h3>Monthly amount by payment mean</h3>
                  </div>
                  <div class="content chart-container">
                    {{time-series-chart
                    barData=transactionChartData
                    selectedInterval='M'
                    selectedSeedColor='rgb(60,110,80)'
                    }}
                  </div>
              </div>
          </div>
          <div class="col-sm-12 col-md-2">
              <div class="block-flat">
                  <div class="header">
                      <h3>Filtering options</h3>
                  </div>
                  <div class="content">
                      <h5>Payment Mean</h5>
                      <ul class="list-unstyled">
                        {{#each paymentMeans as |paymentMean|}}
                            <li>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox"
                                               checked="checked" {{action "updateSelectedPaymentMeans" paymentMean on="change"}}/>
                                        {{paymentMean.name}}
                                    </label>
                                </div>
                            </li>
                        {{/each}}
                      </ul>
                  </div>
              </div>
          </div>
      </div>
  

    <div class="row">
      {{#if expenseByCategoryData}}
          <div class="col-sm-12 col-md-6">
              <div class="block-flat">
                  <div class="header">
                      <h3>Expenses by category</h3>
                  </div>
                  <div class="content chart-container">
                    {{pie-chart
                    selectedSeedColor='rgb(235,35,35)'
                    data=expenseByCategoryData
                    }}

                  </div>
              </div>

          </div>
      {{/if}}
      {{#if incomeByCategoryData}}
          <div class="col-sm-12 col-md-6">
              <div class="block-flat">
                  <div class="header">
                      <h3>Income by category</h3>
                  </div>
                  <div class="content chart-container">
                    {{pie-chart
                    selectedSeedColor='rgb(60,110,80)'
                    data=incomeByCategoryData
                    }}

                  </div>
              </div>
          </div>
      {{/if}}
    </div>

  {{outlet}}
</div>