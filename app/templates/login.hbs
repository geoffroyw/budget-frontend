<div id="cl-wrapper" class="login-container" style="opacity: 1; margin-left: 0;">

    <div class="middle-login">
        <div class="block-flat">
            <div class="header">
                <h3 class="text-center">
                    <img class="logo-img" src="images/logo-retina.png" alt="logo" width="140" height="93">
                </h3>
            </div>
            <div>
                <form {{action 'authenticate' on='submit'}} style="margin-bottom: 0px !important;"
                                                            class="form-horizontal">
                    <div class="content">
                        <h4 class="title">Login Access</h4>
                        {{#if errorMessage}}
                            <p>{{errorMessage}}</p>
                        {{/if}}
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    {{input id='username' placeholder='Username' value=identification class="form-control"}}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                    {{input id='password' placeholder='Enter Password' type='password' value=password class="form-control"}}
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="foot">
                        {{#link-to 'signup' class='btn btn-default'}}Register{{/link-to}}
                        <button class="btn btn-primary" data-dismiss="modal" type="submit">Log me in</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center out-links"><a href="#">Â© 2015 Yac.io</a></div>
    </div>

</div>