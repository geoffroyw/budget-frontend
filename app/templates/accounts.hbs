<div class="cl-mcont aside">
    <div class="page-aside email">
        <div>
            <div class="content">
                <button class="navbar-toggle" data-target=".mail-nav" data-toggle="collapse" type="button">
                    <span class="fa fa-chevron-down"></span>
                </button>
                <h2 class="page-title">My Bank accounts</h2>
            </div>
            <div class="mail-nav collapse">
                <ul class="nav nav-pills nav-stacked ">
                    {{#each model as |account|}}
                        {{#link-to 'accounts.show' account tagName='li' href=false}}
                            {{#link-to 'accounts.show' account}}
                                {{#if account.isBalanceNegative}}
                                    <span class="label label-danger pull-right">
                                        {{format-amount account.balance account.currency}}
                                    </span>
                                {{else}}
                                    <span class="label label-success pull-right">
                                        {{format-amount account.balance account.currency}}
                                    </span>
                                {{/if}}

                                {{account.name}}
                            {{/link-to}}

                        {{/link-to}}
                    {{/each}}
                </ul>

                <div class="compose">
                    {{#link-to 'accounts.new' class='btn btn-flat btn-primary'}}
                        Add an account
                    {{/link-to}}
                </div>
            </div>
        </div>

    </div>

    {{outlet}}
</div>
