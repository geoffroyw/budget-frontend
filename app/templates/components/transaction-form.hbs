{{#modal-window title=title ok='save' close='removeModal'}}
    <form {{action 'ok' on='submit'}} class="form-horizontal">
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">Date</label>
            <div class="col-sm-10">
                {{bootstrap-datepicker value=model.date class='form-control'}}
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                {{input type='text' value=model.description class='form-control'}}
            </div>
        </div>

        <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">Amount</label>
            <div class="col-sm-10">
                {{input type='text' value=model.amount class='form-control'}}
            </div>
        </div>

        <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">Currency</label>
            <div class="col-sm-10">
                {{input type='text' value=model.currency class='form-control'}}
            </div>
        </div>

        <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">Payment Mean</label>
            <div class="col-sm-10">
                {{ember-selectize
                content=paymentMeans
                optionLabelPath='content.name'
                selection=model.payment_mean}}
            </div>
        </div>

        <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">Bank Account</label>
            <div class="col-sm-10">
                {{ember-selectize
                content=bankAccounts
                optionLabelPath='content.name'
                selection=model.bank_account}}
            </div>
        </div>

        <div class="form-group">
            <label for="amount" class="col-sm-2 control-label">Categories</label>
            <div class="col-sm-10">
                {{ember-selectize
                content=allCategoriesName
                multiple=true
                optionValuePath='content.name'
                optionLabelPath='content.name'
                selection=selectedCategoriesName
                delimiter=','
                create-item='newCategory'
                remove-value='removeCategory'
                }}
            </div>
        </div>
    </form>
{{/modal-window}}