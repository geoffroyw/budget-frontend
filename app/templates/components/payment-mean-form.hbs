<form class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label" for="account-name-input">Account name:</label>

        <div class="col-sm-4">
            {{input value=payment-mean.name disabled=isNotEditing class='form-control' id='account-name-input'}}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" for="account-currency-input">Account currency:</label>

        <div class="col-sm-4">
            {{input value=payment-mean.currency disabled=isNotEditing class='form-control' id='account-currency-input'}}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            {{#if isEditing}}
                <button {{action 'save'}} class="btn btn-success">Save</button>
                <button {{action 'cancel'}} class="btn btn-default">Cancel</button>
            {{else}}
                <button {{action 'edit'}} class="btn btn-primary">Edit</button>
            {{/if}}
        </div>
    </div>
</form>
{{yield}}
