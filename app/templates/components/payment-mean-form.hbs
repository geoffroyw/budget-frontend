<div class="message">
    <div class="head">
        <div class="subject">
            {{input value=payment-mean.name placeholder="Enter the name of the mean of payment here"}}
        </div>
    </div>
    <div class="to">
        <div class="form-group">
            <label class="col-sm-1 control-label">Currency:</label>

            <div class="col-sm-4">
                {{input value=payment-mean.currency class='form-control' id='account-currency-input'}}
            </div>
        </div>
    </div>

    <div class="mail editor">

        <div class="form-group">
            <button {{action 'save'}} class="btn btn-primary">Save</button>
            <button {{action 'cancel'}} class="btn btn-default">Cancel</button>
        </div>
    </div>
</div>
{{yield}}
