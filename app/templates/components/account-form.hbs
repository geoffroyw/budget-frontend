<div class="message">
    <div class="head">
        <div class="subject">
            {{input value=account.name placeholder="Enter the name of the account here"}}
        </div>
    </div>
    <div class="to">
        <div class="form-group">
            <label class="col-sm-1 control-label">Currency:</label>

            <div class="col-sm-4">
                {{ember-selectize
                content=currencyService.currencies
                selection=account.currency
                }}
            </div>
        </div>
    </div>

    <div class="mail editor">

        <div class="form-group">
            <button {{action 'save'}} class="btn btn-primary">Save</button>
            <button {{action 'cancel'}} class="btn btn-default">Cancel</button>
        </div>
    </div>
</div>
{{yield}}
