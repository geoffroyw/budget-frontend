<td class="col-md-1">
    {{#if isEditing}}
        {{bootstrap-datepicker value=model.date class='form-control'}}
    {{else}}
        {{format-date model.date 'DD/MM/YYYY'}}
    {{/if}}
</td>
<td class="col-md-2">
    {{#if isEditing}}
        {{input type='text' value=model.description class='form-control'}}
    {{else}}
        {{model.description}}
    {{/if}}
</td>
<td class="col-md-2 text-right">
    {{#if isEditing}}
        <div class="col-xs-5">
            {{input type='text' value=model.amount class='form-control'}}
        </div>
        <div class="col-xs-5">
            {{input type='text' value=model.currency class='form-control' placeholder='Currency'}}
        </div>

    {{else}}
        {{#if model.isExpense}}
            -
        {{/if}}
        {{format-amount model.amount_cents model.currency}}
        {{#if model.isCrossCurrency}}
            <small>
                *
            </small>
        {{/if}}
    {{/if}}
</td>
<td class="col-md-1">
    {{#if isEditing}}
        {{ember-selectize
        content=paymentMeans
        optionLabelPath='content.name'
        selection=model.payment_mean}}
    {{else}}
        {{model.payment_mean.name}}
    {{/if}}
</td>
<td class="col-md-1">
    {{#if isEditing}}
        {{ember-selectize
        content=bankAccounts
        optionLabelPath='content.name'
        selection=model.bank_account}}
    {{else}}
        {{model.bank_account.name}}
    {{/if}}
</td>
<td class="col-md-2">
    {{#if isEditing}}
        {{ember-selectize
        content=allCategoriesName
        multiple=true
        optionValuePath='content.name'
        optionLabelPath='content.name'
        selection=selectedCategoriesName
        delimiter=','
        create-item='newCategory'
        remove-value='removeCategory'
        }}
    {{else}}
        {{#each model.categories as  |category|}}
            {{category.name}}
        {{/each}}
    {{/if}}

</td>
<td class="col-md-1">
    {{input type='checkbox' checked=model.is_confirmed}}
</td>
<td class="col-md-1">
    {{#if isEditing}}
        <button class="btn btn-success btn-xs" {{action 'save'}}><i class="glyphicon glyphicon-ok"></i></button>
        <button class="btn btn-default btn-xs" {{action 'cancelEdit'}}><i class="glyphicon glyphicon-remove"></i>
        </button>
    {{else}}
        <button class="btn btn-primary btn-xs" {{action 'edit'}}><i class="glyphicon glyphicon-edit"></i></button>
    {{/if}}
</td>
{{yield}}
