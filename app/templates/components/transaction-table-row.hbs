<td class="col-md-1">
  {{input type='checkbox' checked=model.is_confirmed}}
</td>
<td class="col-md-1">
  {{format-date model.date 'DD/MM/YYYY'}}
</td>
<td class="col-md-2">
  {{model.description}}
</td>
<td class="col-md-1 text-right">
  {{format-amount model.settlementAmountCents model.settlementCurrency}}
  {{#if model.settlementAmountIndicative}}*{{/if}}
  {{#if model.isCrossCurrency}}
      <small>
          ({{format-amount model.amount_cents model.currency}})
      </small>
  {{/if}}
</td>
<td class="col-md-2">
  {{model.payment_mean.name}}
</td>
<td class="col-md-2">
  {{model.bank_account.name}}
</td>
<td class="col-md-2">
  {{model.category.name}}
</td>
<td class="col-md-1">
    <button class="btn btn-primary btn-xs" {{action 'edit'}} title="Edit transaction"><i class="glyphicon glyphicon-edit"></i></button>
    <button class="btn btn-primary btn-xs" {{action 'duplicate'}} title="Duplicate transaction"><i class="glyphicon glyphicon-copy"></i></button>
</td>
{{yield}}
