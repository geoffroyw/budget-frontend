<div class="cl-mcont">

    {{#if hasBankAccounts}}
        <div class="row">
            {{#each bankAccounts as |account|}}
                <div class="col-md-3 col-sm-6">
                    <div class="fd-tile detail clean tile-purple">
                        <div class="content">
                            <h1 class="text-left">{{format-amount account.balance account.currency}}</h1>
                            <p>{{account.name}}</p></div>
                        <div class="icon"><i class="fa fa-flag"></i></div>
                        {{#link-to 'accounts.show' account class='details'}}
                            Details <span><i class="fa fa-arrow-circle-right pull-right"></i></span>
                        {{/link-to}}
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        {{#modal-window title='Create a bank account' ok='createAccount' close='removeModal'}}
            <div class="text-center">
                <h4>Welcome to MyBudget</h4>
                <p>You can start by adding a bank account.</p>
            </div>

            <form {{action 'ok' on='submit'}} class="form-horizontal">
                <div class="form-group">
                    <label for="date" class="col-sm-4 control-label">Account name</label>
                    <div class="col-sm-4">
                        {{input value=newAccount.name class='form-control'}}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Currency:</label>

                    <div class="col-sm-4">
                        {{ember-selectize
                        content=currencyService.currencies
                        selection=newAccount.currency
                        }}
                    </div>
                </div>
            </form>

        {{/modal-window}}
    {{/if}}

    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>My recent transactions</h3>
                </div>
                <div class="content">
                    {{transaction-table
                    transactions=sortedContent
                    createNewCategory='createNewCategory'
                    editTransaction='editTransaction'
                    newTransaction='openTransactionFormModal'
                    }}
                </div>
            </div>
        </div>
    </div>

    {{#if showTransactionForm}}
        {{transaction-form
        bankAccounts=bankAccounts
        paymentMeans=paymentMeans
        categories=categories
        model=selectedTransaction
        removeModal='removeModal'
        createNewCategory='createNewCategory'}}
    {{/if}}

    {{outlet}}
</div>