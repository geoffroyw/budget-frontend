<div class="row">
    <div class="col-md-12">
        <h2 id="title">My recent transactions</h2>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Mean of Payment</th>
                    <th>Bank Account</th>
                    <th>Categories</th>
                    <th>Confirmed</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#each model.transactions as |transaction|}}
                    {{editable-transaction-row model=transaction paymentMeans=model.paymentMeans bankAccounts=model.bankAccounts}}
                {{/each}}
                </tbody>
            </table>
        </div>

        <button class="btn btn-primary" {{action 'newTransaction'}}>Add transaction</button>
    </div>
</div>


{{outlet}}
