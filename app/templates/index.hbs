<h2 id="title">My recent transactions</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Currency</th>
        <th>Mean of Payment</th>
    </tr>
    </thead>
    <tbody>
    {{#each model as |transaction|}}
        <tr>
            <td>{{format-date transaction.date 'DD/MM/YYYY'}}</td>
            <td>{{transaction.description}}</td>
            <td>{{format-amount transaction.amount_cents transaction.currency}}</td>
            <td>{{transaction.currency}}</td>
            <td>TODO</td>
        </tr>
    {{/each}}
    </tbody>
</table>


{{outlet}}
