<div class="row">
    <div class="col-md-4">
        <h2 id="title">My Means of payment</h2>

        <ul class="list-unstyled">
            {{#each model as |mean|}}
                <li>
                    <a href="#" {{action 'selectMean' mean}}>{{mean.name}}</a>
                </li>
            {{/each}}
        </ul>

        <button type="button" class="btn btn-primary" {{action 'newPaymentMean'}}>Add a new mean of payment</button>

    </div>

    <div class="col-md-8">
        <h2 id="title">Means of payment details</h2>

        {{#unless selectedMean}}
            <p>Please select an means of payment on the left to see it's details</p>
        {{else}}
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="account-name-input">Account name:</label>

                    <div class="col-sm-9">
                        {{input value=selectedMean.name disabled=isNotEditing class='form-control' id='account-name-input'}}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="account-currency-input">Account currency:</label>

                    <div class="col-sm-9">
                        {{input value=selectedMean.currency disabled=isNotEditing class='form-control' id='account-currency-input'}}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        {{#if isEditing}}
                            <button {{action 'save'}} class="btn btn-success">Save</button>
                            <button {{action 'cancel'}} class="btn btn-default">Cancel</button>
                        {{else}}
                            <button {{action 'edit'}} class="btn btn-primary">Edit</button>
                        {{/if}}
                    </div>
                </div>
            </form>
        {{/unless}}
    </div>

</div>
{{outlet}}
